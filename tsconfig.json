{
	"compilerOptions": {
		"target": "es2022",
		"moduleResolution": "node",
		"noEmit": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["esnext"],
		"types": ["vitest/globals", "vitest-environment-miniflare/globals"],
