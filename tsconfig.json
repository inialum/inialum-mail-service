{
	"compilerOptions": {
		"target": "es2022",
		"moduleResolution": "node",
		"noEmit": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["esnext"],
		"types": ["vitest/globals", "vitest-environment-miniflare/globals"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@Root/*": ["./*"]
		}
	},
	"include": ["src", "drizzle.config.ts", "worker-configuration.d.ts"],
	"exclude": ["node_modules"]
}
